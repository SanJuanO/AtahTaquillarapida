<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
      >

        <TextView
            android:id="@+id/folioc"
            android:textSize="12dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:text="folio"
            android:textColor="@color/atex"
      />

        <TextView
            android:id="@+id/precioc"
            android:textColor="@color/ablack"
            android:text="precio"

android:layout_below="@id/folioc"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
        />



        <TextView
            android:id="@+id/asientoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12dp"

            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher_background"
            android:text="Asiento"
            android:textAlignment="center"
android:layout_below="@id/tarifac"
            android:textColor="#FF5722"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/tarifac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher_background"
            android:text="Tarifa"
            android:textAlignment="center"
            android:textSize="12dp"

            android:textColor="#FF5722"
            android:gravity="center_horizontal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>